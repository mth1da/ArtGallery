<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app id="WebApp_9" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>Servlet</servlet-name>
    <servlet-class>com.miage.app.Servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
    <url-pattern>/servlet</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>JDBC_DRIVER</param-name>
    <param-value>org.mariadb.jdbc.Driver</param-value>
  </context-param>

  <context-param>
    <param-name>JDBC_URL</param-name>
    <param-value>jdbc:mariadb://localhost:3308/artgallery</param-value>
  </context-param>

  <context-param>
    <param-name>JDBC_LOGIN</param-name>
    <param-value>root</param-value>
  </context-param>

  <context-param>
    <param-name>JDBC_PASSWORD</param-name>
    <param-value>meryam</param-value>
  </context-param>
</web-app>
